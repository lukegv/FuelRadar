<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FuelRadar.UI.SettingsPage">
  <Grid Padding="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <ScrollView Grid.Row="0">
      <StackLayout Orientation="Vertical" Spacing="2">
        <Label Text="My fuel type:" FontSize="20" />
        <Picker x:Name="fuelTypePicker" Title="Pick a fuel type" SelectedIndex="{Binding FuelTypeIndex}" />
      </StackLayout>
    </ScrollView>
    <ContentView Grid.Row="1" Padding="5">
      <Button HorizontalOptions="Center" Text="Save" Command="{Binding Save}" BackgroundColor="White" BorderColor="#C94136" BorderWidth="3" />
    </ContentView>
  </Grid>
</ContentPage>